doctype html
html
    head
        block title
            title= metaData.title
        //-Import Google Icon Font
        link(rel='stylesheet' href=layout.font)
        //-Import materialize.css
        block stylesheets
            link(rel='stylesheet' type='text/css' href=layout.cssFramework media='screen,projection')
            link(rel='stylesheet' type='text/css' href=layout.css media='screen,projection')
        block meta
            //-Let browser know website is optimized for mobile
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            //-Metatags for search engines
            meta(name='description' content=metaData.description)
        if layout.externalScripts
            include external/google/scripts/googleAnalytics.html
    body
        header
            block header
                include ./header/index
        main
            block main
                include ./main/index
        footer
            block footer
                include ./footer/index
        block javascripts
            //-Import jQuery before materialize.js
            script(type='text/javascript' src=layout.jquery)
            script(type='text/javascript' src=layout.cssFrameworkJs)
            script(type='text/javascript' src=layout.cssJs)
